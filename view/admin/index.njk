{% extends "admin/layout.njk" %}

{% block content %} 
<div class="edit">
    <h1>Gerenciar receitas</h1>
    <div class="buttons">
        <a href="/admin/recipes/create">Nova Receita</a>
    </div>
</div>

<div class="cards">
    {% for item in items %}
    <div class="card">
        <img src="{{item.image}}" alt="">
        <div class="card-info">
            <h2>{{item.title}}</h2>
            <h3>{{item.author}}</h3>
            <a href="/admin/recipes/{{item.index}}">visualizar</a>
        </div>
    </div>
    {% endfor %}
</div>
{% endblock %}
